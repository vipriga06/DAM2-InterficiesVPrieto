<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.project.Controller"
            prefHeight="360.0" prefWidth="280.0">

   <VBox alignment="TOP_CENTER" spacing="20.0"
         style="-fx-background-color: linear-gradient(to bottom, #2c2c2c, #1e1e1e);"
         AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
         AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

      <!-- Pantalla -->
      <TextField fx:id="resultField" editable="false"
                 prefHeight="60.0" prefWidth="250.0"
                 style="-fx-background-color: black; -fx-text-fill: lime; -fx-font-size: 22px; -fx-font-weight: bold; -fx-border-color: #555; -fx-border-radius: 8; -fx-background-radius: 8;"
                 alignment="CENTER_RIGHT"/>

      <!-- Teclado -->
      <GridPane alignment="CENTER" hgap="10" vgap="10"
                style="-fx-background-color: transparent;"
                prefHeight="220.0" prefWidth="250.0">

         <!-- Fila 1 -->
         <Button fx:id="button7" text="7" onAction="#handleNumber" styleClass="btn-num" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
         <Button fx:id="button8" text="8" onAction="#handleNumber" styleClass="btn-num" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
         <Button fx:id="button9" text="9" onAction="#handleNumber" styleClass="btn-num" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
         <Button fx:id="buttonDivide" text="/" onAction="#handleOperator" styleClass="btn-op divide" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

         <!-- Fila 2 -->
         <Button fx:id="button4" text="4" onAction="#handleNumber" styleClass="btn-num" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
         <Button fx:id="button5" text="5" onAction="#handleNumber" styleClass="btn-num" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
         <Button fx:id="button6" text="6" onAction="#handleNumber" styleClass="btn-num" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
         <Button fx:id="buttonMultiply" text="*" onAction="#handleOperator" styleClass="btn-op multiply" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

         <!-- Fila 3 -->
         <Button fx:id="button1" text="1" onAction="#handleNumber" styleClass="btn-num" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
         <Button fx:id="button2" text="2" onAction="#handleNumber" styleClass="btn-num" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
         <Button fx:id="button3" text="3" onAction="#handleNumber" styleClass="btn-num" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
         <Button fx:id="buttonSubtract" text="-" onAction="#handleOperator" styleClass="btn-op subtract" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

         <!-- Fila 4 -->
         <Button fx:id="button" text="0" onAction="#handleNumber" styleClass="btn-num" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
         <Button fx:id="buttonClear" text="C" onAction="#handleClear" styleClass="btn-op clear" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
         <Button fx:id="buttonEquals" text="=" onAction="#handleEquals" styleClass="btn-op equals" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
         <Button fx:id="buttonAdd" text="+" onAction="#handleOperator" styleClass="btn-op add" GridPane.columnIndex="3" GridPane.rowIndex="3"/>

         <columnConstraints>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
         </columnConstraints>
         <rowConstraints>
            <RowConstraints percentHeight="25"/>
            <RowConstraints percentHeight="25"/>
            <RowConstraints percentHeight="25"/>
            <RowConstraints percentHeight="25"/>
         </rowConstraints>
      </GridPane>

      <padding>
         <Insets top="20" right="20" bottom="20" left="20"/>
      </padding>
   </VBox>




</AnchorPane>
