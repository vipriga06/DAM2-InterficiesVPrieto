<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" 
            nodeOrientation="RIGHT_TO_LEFT" prefHeight="60.0" prefWidth="300.0" 
            style="-fx-background-color: white; -fx-cursor: hand;"
            xmlns="http://javafx.com/javafx/24.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.segadb.ControllerItem1">
   <children>
      <!-- Imagen del personaje -->
      <ImageView fx:id="image" 
                 fitHeight="66.0" 
                 fitWidth="72.0" 
                 pickOnBounds="true" 
                 preserveRatio="true" 
                 AnchorPane.bottomAnchor="0.0" 
                 AnchorPane.leftAnchor="210.0" 
                 AnchorPane.rightAnchor="18.0" 
                 AnchorPane.topAnchor="-3.0" />
      
      <!-- Nombre del personaje -->
      <Label fx:id="title" 
             alignment="CENTER_RIGHT" 
             prefHeight="27.0" 
             prefWidth="180.0" 
             text="TitleText" 
             textAlignment="RIGHT" 
             AnchorPane.leftAnchor="10.0" 
             AnchorPane.rightAnchor="110.0" 
             AnchorPane.topAnchor="8.0">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      
      <!-- Nombre del juego -->
      <Label fx:id="subtitle" 
             alignment="CENTER_RIGHT" 
             prefHeight="17.0" 
             prefWidth="180.0"
             text="Subtitle Text" 
             textAlignment="RIGHT" 
             textFill="#666666"
             AnchorPane.bottomAnchor="10.0" 
             AnchorPane.leftAnchor="10.0" 
             AnchorPane.rightAnchor="110.0">
         <font>
            <Font size="11.0" />
         </font>
      </Label>
      
      <!-- Círculo de color -->
      <Circle fx:id="circle" 
              fill="#1fff42" 
              radius="14.0" 
              stroke="#CCCCCC" 
              strokeType="INSIDE" 
              strokeWidth="2.0"
              AnchorPane.rightAnchor="20.0" 
              AnchorPane.topAnchor="20.0" />
      
      <!-- Línea separadora -->
      <Pane prefHeight="1.0" 
            style="-fx-background-color: #DDDDDD;" 
            AnchorPane.bottomAnchor="0.0" 
            AnchorPane.leftAnchor="10.0" 
            AnchorPane.rightAnchor="10.0" />
   </children>
</AnchorPane>